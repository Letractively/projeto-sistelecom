<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
 <display-name>SisTelecom</display-name>
 <context-param>
  <param-name>javax.faces.DEFAULT_SUFFIX</param-name>
  <param-value>.xhtml</param-value>
 </context-param>
 <context-param>
  <param-name>org.richfaces.CONTROL_SKINNING</param-name>
  <param-value>enable</param-value>
 </context-param>
 <context-param>
  <param-name>org.richfaces.SKIN</param-name>
  <param-value>blueSky</param-value>
 </context-param>
 <filter>
  <display-name>RichFaces Filter</display-name>
  <filter-name>richfaces</filter-name>
  <filter-class>org.ajax4jsf.Filter</filter-class>
 </filter>
 <filter-mapping>
  <filter-name>richfaces</filter-name>
  <servlet-name>Faces Servlet</servlet-name>
  <dispatcher>REQUEST</dispatcher>
  <dispatcher>FORWARD</dispatcher>
  <dispatcher>INCLUDE</dispatcher>
 </filter-mapping>
 <listener>
  <listener-class>com.sun.faces.config.ConfigureListener</listener-class>
 </listener>
 <servlet>
  <servlet-name>Faces Servlet</servlet-name>
  <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
  <load-on-startup>1</load-on-startup>
 </servlet>
 <servlet>
  <display-name>ClienteServlet</display-name>
  <servlet-name>ClienteServlet</servlet-name>
  <servlet-class>br.com.sistelecom.relatorio.servlet.ClienteServlet</servlet-class>
 </servlet>
 <servlet>
  <display-name>FuncionarioServlet</display-name>
  <servlet-name>FuncionarioServlet</servlet-name>
  <servlet-class>br.com.sistelecom.relatorio.servlet.FuncionarioServlet</servlet-class>
 </servlet>
 <servlet>
  <display-name>DepartamentoServlet</display-name>
  <servlet-name>DepartamentoServlet</servlet-name>
  <servlet-class>br.com.sistelecom.relatorio.servlet.DepartamentoServlet</servlet-class>
 </servlet>
 <servlet>
  <display-name>ProdutoServlet</display-name>
  <servlet-name>ProdutoServlet</servlet-name>
  <servlet-class>br.com.sistelecom.relatorio.servlet.ProdutoServlet</servlet-class>
 </servlet>
 <servlet>
  <display-name>CargoServlet</display-name>
  <servlet-name>CargoServlet</servlet-name>
  <servlet-class>br.com.sistelecom.relatorio.servlet.CargoServlet</servlet-class>
 </servlet>
 <servlet>
  <display-name>RamoServlet</display-name>
  <servlet-name>RamoServlet</servlet-name>
  <servlet-class>br.com.sistelecom.relatorio.servlet.RamoServlet</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>Faces Servlet</servlet-name>
  <url-pattern>*.jsf</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>ClienteServlet</servlet-name>
  <url-pattern>/RelatorioCliente</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>FuncionarioServlet</servlet-name>
  <url-pattern>/RelatorioFuncionario</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>DepartamentoServlet</servlet-name>
  <url-pattern>/RelatorioDepartamento</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>ProdutoServlet</servlet-name>
  <url-pattern>/RelatorioProduto</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>CargoServlet</servlet-name>
  <url-pattern>/RelatorioCargo</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>RamoServlet</servlet-name>
  <url-pattern>/RelatorioRamo</url-pattern>
 </servlet-mapping>
 <session-config>
  <session-timeout>60</session-timeout>
 </session-config>
 <welcome-file-list>
  <welcome-file>inicializacao/index.jsp</welcome-file>
 </welcome-file-list>
</web-app>
